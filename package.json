{
  "name": "postcss-style-docs",
  "version": "0.0.7",
  "description": "PostCSS plugin for dynamically adding documentation to styles",
  "keywords": [
    "postcss",
    "css",
    "postcss-plugin",
    "postcss-style-docs"
  ],
  "scripts": {
    "build": "concurrently npm:tsc:*",
    "lint": "eslint ./src/index.ts",
    "postrelease": "git push --follow-tags origin master; npm publish",
    "prerelease": "npm run build",
    "release": "standard-version",
    "test": "npm run build && jest --coverage && npm run lint",
    "tsc:cjs": "tsc --project tsconfig.cjs.json",
    "tsc:mjs": "tsc --project tsconfig.mjs.json"
  },
  "main": "./lib/cjs/index.js",
  "module": "./lib/mjs/index.js",
  "exports": {
    "import": "./lib/cjs/index.js",
    "require": "./lib/cjs/index.js"
  },
  "files": [
    "lib/**/*"
  ],
  "sideEffects": false,
  "author": "Caleb D. Williams <caleb.d.williams@gmail.com>",
  "license": "MIT",
  "repository": "calebdwilliams/postcss-style-docs",
  "engines": {
    "node": ">=12.0.0"
  },
  "peerDependencies": {
    "postcss": "^8.3.0"
  },
  "devDependencies": {
    "@types/jest": "^27.5.0",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "clean-publish": "^3.4.2",
    "concurrently": "^7.1.0",
    "eslint": "^8.15.0",
    "eslint-plugin-jest": "^25.2.2",
    "jest": "^27.3.1",
    "postcss": "^8.3.11",
    "postcss-nesting": "^10.1.4",
    "standard-version": "^9.3.2",
    "ts-jest": "^27.1.4",
    "typescript": "^4.6.4"
  },
  "eslintConfig": {
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2017
    },
    "env": {
      "node": true,
      "es6": true
    },
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:jest/recommended"
    ],
    "rules": {
      "jest/expect-expect": "off"
    }
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    }
  }
}
